<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
	<class name="shop.order.vo.Order" table="orders">
		<id name="oid">
			<generator class="native"/>
		</id>
		
		<!-- 普通属性 -->
		<property name="total"></property>
		<property name="ordertime"></property>
		<property name="state"></property>
		<property name="name"></property>
		<property name="addr"></property>
		<property name="phone"></property>
		
		<!-- 关联关系：与用户 -->
		<many-to-one name="user" class="shop.user.vo.User" column="uid"></many-to-one>
		
		<!-- 关联关系：与订单项 -->
		<set name="orderItems" cascade="save-update">
			<key column="oid"></key>
			<one-to-many class="shop.order.vo.OrderItem" />
		</set>
	</class>
</hibernate-mapping>